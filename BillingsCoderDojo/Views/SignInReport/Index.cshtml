@model IEnumerable<BillingsCoderDojo.ViewModels.SignInReportViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


@using(Html.BeginForm())
{
    <div class="col-lg-1">
        Date:
    </div>
    <div class="col-lg-3">
        @Html.TextBox("DateFilter", null, new { @class = "form-control datepicker" })
    </div>
    <div class="col-lg-1">
        <input type="submit" value="Filter" class="btn btn-default" />
    </div>
}
<br /><br />
<div class="col-lg-12">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SignInTime)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SignInTime)
                </td>
            </tr>
        }

    </table>
</div>

@section scripts
{
    <script type="text/javascript">
        $(function () { 
            $('.datepicker').datepicker();
        });
    </script>
}